<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    tools:context="com.example.adity.bid.rfq">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Objective"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:hint="Max 100 letters"
            android:id="@+id/obj"
            android:maxLength="100"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Methodologies"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/method"
            android:entries="@array/methodlogies"
            android:layout_marginRight="16dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="LOI"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/loi"
            android:entries="@array/incident_rate"
            android:layout_marginRight="16dp"
            android:layout_height="50dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="IR"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/ir"
            android:inputType="number"
            android:hint="1-100%"
            android:layout_marginRight="16dp"
            android:layout_height="50dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Countries"/>

        <MultiAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:id="@+id/countries"
            android:hint="Multi choice(if applicable)"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Description"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:id="@+id/discription"
            android:hint="Max 1000 letters"
            android:maxLength="1000"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:text="Start Date"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:inputType="date"
            android:hint="dd-mm-yyyy"
            android:layout_marginRight="16dp"
            android:id="@+id/txtdate"
            android:layout_height="50dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        android:id="@+id/sub"
        android:layout_gravity="center"
        />

</LinearLayout>
